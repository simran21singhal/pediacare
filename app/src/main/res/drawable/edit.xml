<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item>
    <shape android:shape="rectangle" >
        <corners
            android:radius="14dp"
            />
        <gradient
            android:angle="45"
            android:centerX="35%"
            android:centerColor="#E6D9C8"
            android:startColor="#E0E0E0"
            android:endColor="#858585"
            android:type="linear"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="300dp"
            android:height="40dp"
            />
        <stroke
            android:width="3dp"
            android:color="#878787"
            />
    </shape>
 </item>
</selector>