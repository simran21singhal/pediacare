<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners
            android:radius="14dp"
            />
        <gradient
            android:angle="45"
            android:centerX="35%"
            android:centerColor="#FF8C90"
            android:startColor="#E00B20"
            android:endColor="#F5C2C2"
            android:type="linear"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="200dp"
            android:height="20dp"
            />

    </shape>
</item>
</selector>