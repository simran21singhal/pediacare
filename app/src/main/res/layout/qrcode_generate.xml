<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.simransinghal.loginproject.QRcodeGenerate">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:background="@drawable/edit"
            android:gravity="center"
            android:hint="ENTER CHILD NAME"
            android:paddingLeft="10dp"
            android:textColor="#ffff"
            android:textColorHint="#ffff"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/vacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:background="@drawable/edit"
            android:gravity="center"
            android:text="VACCINE"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_givenon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vacc"
            android:layout_alignStart="@+id/vacc"
            android:layout_below="@+id/vacc"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit"
            android:gravity="center"
            android:hint="GIVEN DATE(dd/mm/yr)"
            android:paddingLeft="10dp"
            android:textColor="#ffff"
            android:textColorHint="#ffff"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_givenon"
            android:layout_alignStart="@+id/tv_givenon"
            android:layout_below="@+id/tv_givenon"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:gravity="center"
            android:hint="DUE DATE(dd/mm/yyyy)"
            android:paddingLeft="10dp"
            android:textColor="#ffff"
            android:textColorHint="#ffff"
            android:inputType="none"
            android:textIsSelectable="true"
            android:textSize="20dp" />

        <Button
            android:id="@+id/gen_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="Generate"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="270dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="330dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>
