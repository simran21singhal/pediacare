<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:focusableInTouchMode="true"
    tools:context="com.example.simransinghal.loginproject.Reception">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/reception" />

    <EditText
        android:id="@+id/parent"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="31dp"
        android:background="@drawable/edit"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="PARENT ID"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/child"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/parent"
        android:layout_marginEnd="14dp"
        android:background="@drawable/button"
        android:text="Find Child" />

    <Spinner
        android:id="@+id/childspinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/parent"
        android:layout_alignTop="@+id/vaccine"
        android:autofillHints="Choose Child Name"
        android:background="@drawable/edit"></Spinner>

    <Button
        android:id="@+id/vaccine"
        android:layout_width="100sp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/child"
        android:layout_below="@+id/child"
        android:layout_marginTop="44dp"
        android:background="@drawable/button"
        android:text="Find Vaccine" />

    <Spinner
        android:id="@+id/vaccspinner"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_alignStart="@+id/childspinner"
        android:layout_below="@+id/childspinner"
        android:layout_marginTop="36dp"
        android:background="@drawable/edit"></Spinner>

    <Button
        android:id="@+id/proceed"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_alignStart="@+id/vaccine"
        android:layout_alignTop="@+id/vaccspinner"
        android:background="@drawable/button"
        android:text="PROCEED" />
</RelativeLayout>