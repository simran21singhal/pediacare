<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VACCINE NAME"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="38dp"
        android:id="@+id/textView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vaccine_name"
        android:background="@drawable/edit"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DURATION"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/vaccine_name"
        android:layout_alignStart="@+id/vaccine_name"
        android:layout_marginTop="45dp"
        android:layout_alignEnd="@+id/textView4"
        android:id="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/edit"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCK"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/duration"
        android:layout_alignStart="@+id/duration"
        android:layout_marginTop="55dp"
        android:id="@+id/textView7" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/edit"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="43dp"
        android:id="@+id/stock" />


    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:layout_below="@+id/stock"
        android:layout_alignStart="@+id/stock"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:text="UPDATE STOCK"
        android:textSize="20dp"
        />


</RelativeLayout>